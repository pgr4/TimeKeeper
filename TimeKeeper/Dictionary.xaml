<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:local="clr-namespace:TimeKeeper">

    <sys:Double x:Key="ListViewItemHeight">25</sys:Double>
    <!--Determined by border thickness and the padding of the container (Border and ListviewItem)-->
    <sys:Double x:Key="RectangeleHeight">23</sys:Double>

    <Style TargetType="ListViewItem">
        <Setter Property="Height" Value="{DynamicResource ListViewItemHeight}"></Setter>
        <Setter Property="Padding" Value="0"></Setter>
    </Style>

    <Style TargetType="Rectangle">
        <Setter Property="Height" Value="{DynamicResource RectangeleHeight}"></Setter>
    </Style>

    <Style TargetType="Canvas">
        <Setter Property="Height" Value="{DynamicResource RectangeleHeight}"></Setter>
    </Style>

</ResourceDictionary>